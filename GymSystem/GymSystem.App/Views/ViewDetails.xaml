<Page
    x:Class="GymSystem.App.ViewDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GymSystem.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <TextBlock x:Name="PageTitle"/>

            <CommandBar
                 x:Name="mainCommandBar"
                HorizontalAlignment="Stretch"
                Background="Transparent">
                <AppBarButton
                    Icon="Save"
                    Label="Save"/>
                <AppBarButton
                    Icon="Cancel"
                    Label="Cancel"/>
                <AppBarButton
                    Icon="Edit"
                    Label="Edit"/>
            </CommandBar>

            <ScrollViewer
                x:Name="DetailPanel"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.Below="PageTitle"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">

                <StackPanel 
                    Margin="0,40,4,0">
                    <toolkit:Expander
                        IsExpanded="True"
                        HorizontalContentAlignment="Left" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >


                        <toolkit:Expander.Header>
                            <Grid>
                                <TextBlock 
                                    Text="General"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                <TextBlock
                                   
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    HorizontalAlignment="Right"/>
                            </Grid>
                        </toolkit:Expander.Header>

                        <RelativePanel Margin="10,0,0,12" HorizontalAlignment="Stretch" Height="254" VerticalAlignment="Stretch">
                            <TextBox
                                x:Name="name"
                                MinWidth="140"
                                Margin="0,8,16,8"
                                Header="Name"
                                RelativePanel.AlignLeftWithPanel="True"
                                Text=""
                                 />
                            <TextBox
                                x:Name="surname"
                                MinWidth="140"
                                Margin="0,8,16,8"
                                Header="Surname"
                               
                                RelativePanel.RightOf="name"
                                Text=""
                              />
                    
                            <TextBox
                                x:Name="Email"
                                Grid.Row="1"
                                MinWidth="140"
                                Margin="0,8,16,0"
                                Header="email"
                                RelativePanel.AlignLeftWithPanel="True"
                                RelativePanel.Below="name"
                                Text="" />
                            <TextBox
                                x:Name="Phone"
                                Grid.Row="1"
                                Grid.Column="1"
                                MinWidth="140"
                                Margin="0,8,16,0"
                                Header="Phone"
                                RelativePanel.Below="surname"
                                RelativePanel.RightOf="Email"
                                Text="" />
                            <TextBox
                                x:Name="Place"
                                Grid.Column="2"
                                MinWidth="140"
                                Margin="0,8,16,0"
                                Header="Place"
                                RelativePanel.Below="surname"
                                RelativePanel.RightOf="Phone"
                                Text="" />
                            <TextBox
                                x:Name="Street"
                                Grid.Column="2"
                                MinWidth="140"
                                Margin="0,8,16,0"
                                Header="Street"
                                RelativePanel.Below="Email"
                                Text="" />
                            <TextBox
                                x:Name="Code"
                                Grid.Column="2"
                                MinWidth="140"
                                Margin="0,8,16,0"
                                Header="Code"
                                RelativePanel.Below="Phone"
                                RelativePanel.RightOf="Street"
                                Text="" />

                        </RelativePanel>
                    </toolkit:Expander>

                    <toolkit:Expander
                         IsExpanded="True"
                        HorizontalContentAlignment="Left">

                        <toolkit:Expander.Header>
                            <Grid>
                                <TextBlock
                                    Text="Entrance"
                                    Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                
                            </Grid>
                        </toolkit:Expander.Header>

                        <RelativePanel Margin="10,0,0,12">
                       
                            
                            <DatePicker
                                x:Name="StartDate"
                                MinWidth="140"
                                Margin="0,8,16,8"
                                Header="Start"
                                RelativePanel.AlignLeftWithPanel="True"
                              />
                            <DatePicker
                                x:Name="EndDate"
                                MinWidth="140"
                                Margin="0,8,16,8"
                                Header="End"
                                RelativePanel.RightOf="StartDate"
                              />

                            <ComboBox x:Name="type" Header="Type" ItemsSource="{x:Bind ViewModel.EnteranceTypes}" SelectedItem="{x:Bind ViewModel.EnteranceTypeSelected,Mode=TwoWay}" HorizontalAlignment="Left" Margin="0,8,16,8" VerticalAlignment="Top" MinWidth="140" RelativePanel.RightOf="EndDate">
                               

                            </ComboBox>

                        </RelativePanel>

                    </toolkit:Expander>

<!--/////////////////////////-->
                    <toolkit:Expander
                        IsExpanded="True"
                        HorizontalContentAlignment="Left">

                        <toolkit:Expander.Header>
                            <TextBlock
                                Text="Log"
                                Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        </toolkit:Expander.Header>

                        <Grid
                            Margin="0,4,0,0">
                            <!--//////-->
                            <toolkit:DataGrid
                                Grid.Row="1"
                                x:Name="dataGrid"
                                Margin="12"
                                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                HorizontalScrollBarVisibility="Visible"
                                VerticalScrollBarVisibility="Visible"
                                AlternatingRowBackground="Transparent"
                                AlternatingRowForeground="Gray"
                                AreRowDetailsFrozen="False"
                                AreRowGroupHeadersFrozen="True"
                                AutoGenerateColumns="False"
                                CanUserSortColumns="False"
                                CanUserReorderColumns="True"
                                CanUserResizeColumns="True"
                                ColumnHeaderHeight="32"
                                MaxColumnWidth="400"
                                FrozenColumnCount="0"
                                GridLinesVisibility="None"
                                HeadersVisibility="Column"
                                IsReadOnly="False"
                                RowDetailsVisibilityMode="Collapsed"
                                SelectionMode="Extended">
                                <toolkit:DataGrid.Columns>
                                    
                                    <toolkit:DataGridTextColumn Header="Id"/>
                                    <toolkit:DataGridTextColumn Header="Date" />
                                    <toolkit:DataGridTextColumn Header="Time"  />
                                    
                                </toolkit:DataGrid.Columns>

                            </toolkit:DataGrid>
                            <!--////-->
                        </Grid>
                    </toolkit:Expander>
                    <!--///////////////////////////////////////////-->


                </StackPanel>
            </ScrollViewer>
        </RelativePanel>
    </Grid>
</Page>
